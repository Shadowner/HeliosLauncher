{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "baseUrl": "src/frontend",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "composite": true,
    "moduleResolution": "Node",
    "paths": {
      "@/common": ["src/common"],
      "@/components": ["src/frontend/components"]
    }
  },
  "include": [
    "vite.config.ts",
    "src/frontend/**/*.d.ts",
    "src/frontend/**/*.ts",
    "src/frontend/**/*.js",
    "src/frontend/**/*.svelte"
  ]
}
